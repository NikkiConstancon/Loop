<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reva.loop301.reva.Login"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/txt_subscribePass"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:layout_marginBottom="173dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_confirmPassReg"
        android:text="@string/textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_whoSub"
        tools:ignore="LabelFor,RtlHardcoded"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="Password to Subscribe to Patient:" />

    <EditText
        android:id="@+id/input_subToPatientPass"
        android:layout_width="246dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/_12345"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="121dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_whoSub"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="122dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_subscribePass"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txt_whoSub"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_whoSub"
        android:maxLines="2"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/background_dark"
        android:textIsSelectable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rad_researcher"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="To Whom Are You Subscribing? Please Type in Either Their E-Mail or User Name" />

    <EditText
        android:id="@+id/txt_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@id/txt_userMailReg"
        android:maxLines="1"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textIsSelectable="false"
        tools:background="@android:color/holo_blue_dark"
        tools:ignore="LabelFor"
        tools:text="Registration"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_whoSub"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="@string/charles123"
        android:inputType="textWebEmailAddress"
        android:selectAllOnFocus="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_subscribePass"
        android:layout_marginStart="31dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_whoSub"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/txt_Title"
        android:layout_width="299dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_passwordReg"
        android:text="@string/textview"
        tools:ignore="LabelFor,RtlHardcoded"
        tools:text="What is Your Relation to the Patient?"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_whoSub"
        android:layout_marginStart="31dp"
        android:layout_marginTop="85dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="775dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_patRegCont"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/textview"
        tools:ignore="RtlHardcoded"
        tools:text="Register"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioButton
        android:id="@+id/rad_caretaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radiobutton"
        tools:text="Caretaker"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="128dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_Title"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rad_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radiobutton2"
        tools:text="Doctor"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Title"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/rad_researcher" />

    <RadioButton
        android:id="@+id/rad_researcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/researcher"
        tools:text="Researcher"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/rad_caretaker"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/rad_caretaker" />

    <RadioButton
        android:id="@+id/rad_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/famimly"
        tools:text="Family"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/rad_doctor"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/rad_doctor" />

</android.support.constraint.ConstraintLayout>
