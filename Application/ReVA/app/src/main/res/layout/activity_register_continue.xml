<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reva.loop301.reva.Login"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/txt_userName"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@id/rad_patYes"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        tools:ignore="LabelFor,RtlHardcoded"
        tools:text="Please Enter a User Name:"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_subpass"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="@+id/input_addr"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_addr"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="26dp" />

    <EditText
        android:id="@+id/txt_confirmSubPass"
        android:layout_width="164dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_confirmPassReg"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        tools:ignore="LabelFor,RtlHardcoded"
        tools:text="Confirm Password:"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="164dp"
        app:layout_constraintLeft_toLeftOf="@+id/input_confSubsPass" />

    <EditText
        android:id="@+id/input_userName"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="@string/_12345"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/input_subsPass"
        app:layout_constraintRight_toRightOf="@+id/input_subsPass"
        android:layout_marginTop="107dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="107dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_userName"
        app:layout_constraintTop_toTopOf="@+id/input_addr"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/input_confSubsPass"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="111dp"
        android:layout_marginEnd="36dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="36dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:hint="@string/_12345"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/btn_patRegCont"
        app:layout_constraintTop_toTopOf="@+id/input_subsPass"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txt_addr"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="31dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_addr"
        android:maxLines="1"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/background_dark"
        android:textIsSelectable="false"
        tools:ignore="RtlHardcoded"
        tools:text="What Is Your Address?"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/input_addr"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="@+id/txt_userName"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_register"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_register"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="32dp" />

    <EditText
        android:id="@+id/txt_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@id/txt_userMailReg"
        android:maxLines="1"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textIsSelectable="false"
        tools:background="@android:color/holo_blue_dark"
        tools:ignore="LabelFor"
        tools:text="Registration"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_addr"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="@string/_15_la_vue_wierda_glen"
        android:inputType="textWebEmailAddress"
        android:selectAllOnFocus="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_subpass"
        android:layout_marginStart="31dp"
        android:layout_marginTop="122dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="122dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_register"
        android:layout_marginLeft="31dp"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txt_subpass"
        android:layout_width="299dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_passwordReg"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        tools:ignore="LabelFor,RtlHardcoded"
        tools:text="Please Pick a Subscriber Password:"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="31dp" />

    <EditText
        android:id="@+id/input_subsPass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="@string/_12345"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_confirmSubPass"
        app:layout_constraintRight_toRightOf="@+id/input_confSubsPass"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_subpass"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_subpass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_patRegCont"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginStart="31dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/textview"
        tools:ignore="RtlHardcoded"
        tools:text="Continue"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="31dp"
        android:onClick="contPatReg"/>

</android.support.constraint.ConstraintLayout>
