<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reva.loop301.reva.Login"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/txt_patientCheck"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_confirmPassReg"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        tools:ignore="LabelFor,RtlHardcoded"
        tools:text="Are You a Patient?"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/input_confirmPassReg"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="156dp"
        app:layout_constraintLeft_toLeftOf="@+id/input_confirmPassReg" />

    <EditText
        android:id="@+id/txt_confPass"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_confirmPassReg"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        tools:ignore="LabelFor,RtlHardcoded"
        tools:text="Confirm Password:"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_patientCheck"
        android:layout_marginEnd="45dp"
        app:layout_constraintRight_toRightOf="@+id/input_confirmPassReg"
        android:layout_marginTop="112dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_PassReg"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="45dp" />

    <EditText
        android:id="@+id/input_confirmPassReg"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="@string/_12345"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_patientCheck"
        app:layout_constraintRight_toRightOf="@+id/input_passwordReg"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="@+id/input_passwordReg" />

    <EditText
        android:id="@+id/txt_userMailReg"
        android:layout_width="139dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_emailReg"
        android:maxLines="1"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/background_dark"
        android:textIsSelectable="false"
        tools:ignore="RtlHardcoded"
        tools:text="E-Mail Address:"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_PassReg"
        android:layout_marginTop="67dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="67dp"
        app:layout_constraintLeft_toLeftOf="@+id/input_emailReg"
        app:layout_constraintTop_toTopOf="@+id/txt_register"
        android:layout_marginLeft="2dp" />

    <EditText
        android:id="@+id/txt_register"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@id/txt_userMailReg"
        android:maxLines="1"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textIsSelectable="false"
        tools:background="@android:color/holo_blue_dark"
        tools:ignore="LabelFor"
        tools:text="Registration"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_emailReg"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginStart="29dp"
        android:ems="10"
        android:hint="@string/patient0_gmail_com"
        android:inputType="textWebEmailAddress"
        android:selectAllOnFocus="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txt_PassReg"
        android:layout_marginTop="52dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_userMailReg"
        android:layout_marginLeft="29dp" />

    <EditText
        android:id="@+id/txt_PassReg"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="31dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_passwordReg"
        android:text="@string/textview"
        android:textColor="@android:color/background_dark"
        tools:ignore="LabelFor,RtlHardcoded"
        tools:text="Password:"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/input_passwordReg"
        app:layout_constraintRight_toRightOf="@+id/input_emailReg"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="35dp" />

    <EditText
        android:id="@+id/input_passwordReg"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="@string/_12345"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/input_confirmPassReg"
        app:layout_constraintRight_toRightOf="@+id/txt_PassReg"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="70dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_PassReg" />

    <Button
        android:id="@+id/btn_register"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/textview"
        tools:ignore="RtlHardcoded"
        tools:text="Continue "
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="31dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupReg1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="31dp"
        android:onClick="contReg"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroupReg1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/txt_patientCheck"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_patientCheck">

        <RadioButton
            android:id="@+id/rad_patYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yes" />

        <RadioButton
            android:id="@+id/rad_patientNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
