<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_real_time">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/heart_rate"
                android:id="@+id/img_heart_rate_icon"
                android:contentDescription=""
                tools:ignore="ContentDescription" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_heart_rate_icon"
                android:textStyle="bold"
                android:text="@string/heart_rate"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:id="@+id/txt_heartRate"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_heartRate"
                android:textStyle="bold"
                android:text="@string/_85bpm"
                android:textSize="50sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentTop="true"
                android:id="@+id/txt_heart_rate_number"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>