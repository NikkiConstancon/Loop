<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reva.loop301.reva.Login"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/txt_register"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@id/txt_userMailReg"
        android:maxLines="1"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textIsSelectable="false"
        tools:background="@android:color/holo_blue_dark"
        tools:ignore="LabelFor"
        tools:text="Registration"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_patRegDone"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginBottom="39dp"
        android:layout_marginStart="31dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:text="Register"
        android:layout_marginLeft="31dp" />

    <EditText
        android:id="@+id/txt_age"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="384dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_age"
        android:text="@string/textview"
        app:layout_constraintBottom_toBottomOf="@+id/input_age"
        app:layout_constraintLeft_toLeftOf="@+id/txt_register"
        app:layout_constraintTop_toTopOf="@+id/txt_register"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="Age:" />

    <EditText
        android:id="@+id/input_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="@string/_46"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/txt_weight"
        app:layout_constraintLeft_toLeftOf="@+id/txt_age"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/txt_weight"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginBottom="159dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="159dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_weight"
        android:text="@string/textview"
        app:layout_constraintBottom_toBottomOf="@+id/input_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/txt_height"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="Weight (in kg): "
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/input_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/_65_5"
        android:inputType="numberDecimal"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_weight"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_weight" />

    <EditText
        android:id="@+id/txt_height"
        android:layout_width="159dp"
        android:layout_height="41dp"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_height"
        android:text="@string/textview"
        app:layout_constraintBottom_toTopOf="@+id/txt_reason"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/input_weight"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="Height (in meters):"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/input_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:hint="@string/_1_72"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/rad_age"
        app:layout_constraintLeft_toLeftOf="@+id/txt_height"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/txt_reason"
        android:layout_width="236dp"
        android:layout_height="42dp"
        android:layout_marginBottom="31dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_height"
        android:text="@string/reason_for_being_bedridden"
        app:layout_constraintBottom_toBottomOf="@+id/rad_age"
        app:layout_constraintLeft_toLeftOf="@+id/input_height"
        app:layout_constraintTop_toBottomOf="@+id/input_height"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <RadioButton
        android:id="@+id/rad_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radiobuttonAge"
        tools:text="Age"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="158dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_reason" />

    <RadioButton
        android:id="@+id/rad_illness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radiobuttonIllness"
        tools:text="Illness"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/rad_accident"
        android:layout_marginStart="4dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/rad_accident"
        android:layout_marginLeft="4dp" />

    <RadioButton
        android:id="@+id/rad_accident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radiobuttonAccident"
        tools:text="Accident"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/rad_age"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/rad_age" />

    <RadioButton
        android:id="@+id/rad_disability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radiobuttonDisability"
        tools:text="Disability"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/rad_illness"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/rad_illness" />

</android.support.constraint.ConstraintLayout>
