<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".browse.Registration"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/stat_toolbar"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:gravity="center"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="20sp"
            android:textColor="@color/colorTextIcons"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            android:drawableTint="@color/white"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            tools:ignore="HardcodedText" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stat_toolbar"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:padding ="5dp">

    <EditText
        android:id="@+id/txt_subscribed_to_title"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_age"
        android:text="Subscribed To"
        android:textColor="@android:color/background_dark"
        tools:text="Subscribed To"
        tools:ignore="HardcodedText,LabelFor"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="50dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/txt_pending_title"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_age"
        android:text="Pending"
        android:textColor="@android:color/background_dark"
        tools:text="Pending"
        tools:ignore="HardcodedText,LabelFor"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rvSubscribedTo" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_pending_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSubscribedTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_subscribed_to_title" />

    <Button
        android:id="@+id/btn_change_my_info"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Register"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="Edit Personal Information"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rvPending"
        app:layout_constraintVertical_bias="0.173"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    </ScrollView>

</android.support.constraint.ConstraintLayout>
