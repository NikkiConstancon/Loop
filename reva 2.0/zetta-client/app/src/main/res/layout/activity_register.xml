<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zetta.android.browse.Registration"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="128dp"
        android:layout_width="fill_parent"
        android:gravity="center"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO ReVA"
            android:textSize="30sp"
            android:textColor="@color/colorTextIcons"

            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            tools:ignore="HardcodedText" />

    </android.support.design.widget.AppBarLayout>
<!-- NEEDS:
        EMAIL ADDRESS
        input_emailReg
        PASSWORD
        input_passwordReg
        CONFIRM PASSWORD
        input_confirmPassReg
        ARE YOU A PATIENT RADIOBOX
--><android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.zetta.android.browse.activity_register">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_email_txt"
            android:hint="Email address"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"
            >

        <EditText
            android:id="@+id/input_emailReg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_pass_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"

            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_email_txt"
            tools:ignore="HardcodedText,RtlHardcoded"
            tools:layout_constraintTop_creator="1" >
            <EditText
                android:id="@+id/input_passwordReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirmPassReg_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"

            android:hint="Confirm Password"
            android:inputType="textPassword"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_pass_txt"
            tools:ignore="HardcodedText,RtlHardcoded"
            tools:layout_constraintTop_creator="1" >
            <EditText
                android:id="@+id/input_confirmPassReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/txt_patientCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:inputType="none"

            android:text="Are You a Patient?"
            android:textColor="@android:color/background_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
            tools:text="Are You a Patient?"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassReg_txt" />

        <RadioGroup
            android:id="@+id/radioGroupReg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/txt_patientCheck"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <RadioButton
                android:id="@+id/rad_patYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textColor="@color/textColorPrimary"
                tools:ignore="HardcodedText"
                tools:text="Yes" />

            <RadioButton
                android:id="@+id/rad_patientNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="No"
                android:textColor="@color/textColorPrimary"

                tools:ignore="HardcodedText,RtlHardcoded" />
        </RadioGroup>



    <!-- btn_register -->
        <Button
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:id="@+id/btn_register"
            android:text="CONTINUE"
            android:textColor="@color/white"


            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            tools:ignore="HardcodedText"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupReg1"/>


    </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
