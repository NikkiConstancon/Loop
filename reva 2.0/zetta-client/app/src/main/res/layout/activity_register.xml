<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zetta.android.browse.Registration"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/txt_patientCheck"
        android:layout_width="262dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_confirmPassReg"
        android:text="Are You a Patient?"
        android:textColor="@android:color/background_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
        tools:text="Are You a Patient?"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupReg1" />

    <EditText
        android:id="@+id/txt_confPass"
        android:layout_width="262dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_confirmPassReg"
        android:text="Confirm Password:"
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
        tools:text="Confirm Password:"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/input_confirmPassReg" />

    <EditText
        android:id="@+id/input_confirmPassReg"
        android:layout_width="262dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="************"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_patientCheck" />

    <EditText
        android:id="@+id/txt_userMailReg"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_emailReg"
        android:maxLines="1"
        android:text="E-Mail Address:"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/background_dark"
        android:textIsSelectable="false"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="E-Mail Address:"
        android:layout_marginStart="31dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/input_emailReg" />

    <TextView
        android:id="@+id/txt_register"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="384dp"
        android:layout_height="46dp"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@id/txt_userMailReg"
        android:maxLines="1"
        android:text="Registration"
        android:gravity="center"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/txt_userMailReg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Registration"
        tools:ignore="HardcodedText,LabelFor" />

    <EditText
        android:id="@+id/input_emailReg"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="johndoe@gmail.com"
        android:inputType="textWebEmailAddress"
        android:selectAllOnFocus="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_PassReg" />

    <EditText
        android:id="@+id/txt_PassReg"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="31dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_passwordReg"
        android:text="Password:"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/input_passwordReg"
        tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:text="Password:"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/input_passwordReg"
        android:layout_width="262dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="************"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/txt_confPass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/btn_register"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Continue "
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="Continue "
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp" />

    <RadioGroup
        android:id="@+id/radioGroupReg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_register"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.209">

        <RadioButton
            android:id="@+id/rad_patYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            tools:ignore="HardcodedText"
            tools:text="Yes" />

        <RadioButton
            android:id="@+id/rad_patientNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="No"

            tools:ignore="HardcodedText,RtlHardcoded" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
