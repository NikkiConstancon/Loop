<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.zetta.android.browse.notifications"
    android:theme="@style/AppThemeLight"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        android:top="2dp"
        android:left="2dp"
        android:bottom="2dp"
        android:right="2dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/txt_noteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/btn_closeNotification"
                android:layout_alignStart="@+id/txt_noteContent"
                android:text="Heart Rate"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded"
                tools:text="Heart Rate"
                tools:textColor="@color/textColorPrimary" />


            <ImageView

                android:id="@+id/notif_image"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/txt_noteTitle"
                android:background="@color/cardview_light_background"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_heart"
                android:layout_alignTop="@id/txt_noteTitle"/>

            <Button
                android:id="@+id/btn_closeNotification"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlHardcoded"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:text="X"
                tools:textSize="12sp" />

            <TextView
                android:id="@+id/txt_noteContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_noteTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="10"
                android:text="Heart rate sensor has reported strong deviations from the norm, please seek medical assistance immediately."
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <Button
                android:id="@+id/btn_getAdvice"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/txt_noteContent"
                android:layout_below="@+id/txt_noteContent"
                android:layout_marginTop="11dp"
                android:gravity="center"
                tools:ignore="HardcodedText,RtlHardcoded"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:text="Get Advice"
                tools:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>