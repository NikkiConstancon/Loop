<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.zetta.android.browse.notifications"
    android:theme="@style/AppThemeLight"
    android:padding="5dp">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view_notifications"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/notif_status_image"
                android:layout_width="17dip"
                android:layout_height="17dip"
                android:layout_marginTop="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/notif_status_circle"
                android:importantForAccessibility="no"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/txt_noteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/notif_status_image"
                android:layout_toEndOf="@+id/notif_status_image"
                android:text="Heart Rate"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded"
                tools:text="Heart Rate"
                tools:textColor="@color/textColorPrimary" />


            <ImageView

                android:id="@+id/notif_image"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_alignBottom="@id/txt_noteTitle"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/txt_noteTitle"
                android:background="@color/cardview_light_background"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_heart" />

            <Button
                android:id="@+id/btn_closeNotification"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlHardcoded"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:text="X"
                tools:textSize="8sp" />

            <TextView
                android:id="@+id/txt_noteContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_noteTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="10"
                android:text="Heart rate sensor has reported strong deviations from the norm, please seek medical assistance immediately."
                android:textColor="@color/colorPrimaryText"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>