<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".browse.Registration"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/txt_register"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@id/txt_userMailReg"
        android:maxLines="1"
        android:text="Registration"
        android:gravity="center"
        android:textIsSelectable="false"
        tools:ignore="HardcodedText,LabelFor"
        tools:text="Registration"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_age"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_patRegDone"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Register"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="Register"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/txt_age"
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_age"
        android:text="Age:"
        android:textColor="@android:color/background_dark"
        tools:text="Age:"
        tools:ignore="HardcodedText,LabelFor"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginTop="50dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/input_age"
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:ems="10"
        android:hint="46"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:ignore="HardcodedText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="-9dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_age" />

    <EditText
        android:id="@+id/txt_weight"
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_weight"
        android:text="Weight (in kg): "
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText,LabelFor,TextFields"
        tools:text="Weight (in kg): "
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/input_height" />

    <EditText
        android:id="@+id/input_weight"
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:layout_marginStart="31dp"
        android:ems="10"
        android:hint="65.5"
        android:inputType="numberDecimal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:ignore="HardcodedText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_weight" />

    <EditText
        android:id="@+id/txt_height"
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:ems="10"
        android:inputType="none"
        android:labelFor="@+id/input_height"
        android:text="Height (in meters):"
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText,LabelFor,TextFields"
        tools:text="Height (in meters):"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/input_age" />

    <EditText
        android:id="@+id/input_height"
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:textSize="14sp"
        android:ems="10"
        android:hint="1.72"
        android:inputType="number|numberDecimal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:ignore="HardcodedText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_height" />

    <EditText
        android:id="@+id/txt_reason"
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:ems="10"
        android:textSize="14sp"
        android:inputType="none"
        android:labelFor="@+id/input_height"
        android:text="Reason for Being Bedridden:"
        android:textColor="@android:color/background_dark"
        tools:text="Reason for Being Bedridden"
        tools:ignore="HardcodedText,LabelFor"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/input_weight"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupReg2"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/radioGroupReg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupReg3"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <RadioButton
            android:id="@+id/rad_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            tools:ignore="HardcodedText"
            tools:text="Age" />

        <RadioButton
            android:id="@+id/rad_illness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Illness"
            tools:ignore="HardcodedText"
            tools:text="Illness" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupReg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_patRegDone"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <RadioButton
            android:id="@+id/rad_accident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accident"
            tools:ignore="HardcodedText"
            tools:text="Accident" />

        <RadioButton
            android:id="@+id/rad_disability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Disability"
            tools:ignore="HardcodedText"
            tools:text="Disability" />
    </RadioGroup>


</android.support.constraint.ConstraintLayout>
